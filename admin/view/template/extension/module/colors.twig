{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
          <fieldset>
          <legend>{{ text_buttons }}</legend>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="buttons-color">{{ entry_buttons_color }}</label>
            <div class="col-sm-1">
              <input type="color" name="module_color_buttons_color" value="{{ module_color_buttons_color }}" placeholder="{{ entry_buttons_color }}" id="buttons-color" class="form-control"/>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="buttons-text-color">{{ entry_buttons_text_color }}</label>
            <div class="col-sm-1">
              <input type="color" name="module_color_buttons_text_color" value="{{ module_color_buttons_text_color }}" placeholder="{{ entry_buttons_text_color }}" id="buttons-text-color" class="form-control"/>
            </div>
          </div>
          </fieldset>
          <fieldset>
          <legend>{{ text_breadcrumb }}</legend>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="breadcrumb-background-color">{{ entry_breadcrumb_background_color }}</label>
            <div class="col-sm-1">
              <input type="color" name="module_color_breadcrumb_background_color" value="{{ module_color_breadcrumb_background_color }}" placeholder="{{ entry_breadcrumb_background_color }}" id="breadcrumb-background-color" class="form-control"/>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="breadcrumb-text-color">{{ entry_breadcrumb_text_color }}</label>
            <div class="col-sm-1">
              <input type="color" name="module_color_breadcrumb_text_color" value="{{ module_color_breadcrumb_text_color }}" placeholder="{{ entry_breadcrumb_text_color }}" id="breadcrumb-text-color" class="form-control"/>
            </div>
          </div>
          </fieldset>
          <fieldset>
          <legend>{{ text_menu }}</legend>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="menu-color">{{ entry_menu_color }}</label>
            <div class="col-sm-1">
              <input type="color" name="module_color_menu_color" value="{{ module_color_menu_color }}" placeholder="{{ entry_menu_color }}" id="menu-color" class="form-control"/>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="menu-text-color">{{ entry_menu_text_color }}</label>
