          <div class="form-group">
            <label class="col-sm-2 control-label" for="menu-color-h6">{{ entry_h6_color }}</label>
            <div class="col-sm-1">
              <input type="color" name="module_color_h6" value="{{ module_color_h6 }}" placeholder="{{ entry_h6_color }}" id="menu-color-h6" class="form-control"/>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="menu-color-p">{{ entry_p_color }}</label>
            <div class="col-sm-1">
              <input type="color" name="module_color_p" value="{{ module_color_p }}" placeholder="{{ entry_p_color }}" id="menu-color-p" class="form-control"/>
            </div>
          </div>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}