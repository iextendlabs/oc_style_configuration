            <div class="col-sm-1">
              <input type="color" name="module_color_h3" value="{{ module_color_h3 }}" placeholder="{{ entry_h3_color }}" id="menu-color-h3" class="form-control"/>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="menu-color-h4">{{ entry_h4_color }}</label>
