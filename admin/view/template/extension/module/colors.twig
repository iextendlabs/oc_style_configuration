            <div class="col-sm-1">
              <input type="color" name="module_color_menu_hover_color" value="{{ module_color_menu_hover_color }}" placeholder="{{ entry_menu_hover_color }}" id="menu-hover-color" class="form-control"/>
            </div>
          </div>
          </fieldset>
          <fieldset>
          <legend>{{ text_headings }}</legend>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="menu-color-h1">{{ entry_h1_color }}</label>
