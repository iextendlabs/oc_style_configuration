{% endfor %}
</head>

				<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat|Merriweather|Josefin+Sans|Arvo|Raleway|Catamaran|PT+Sans|Open+Sans|Roboto+Slab|Ubuntu">
				<style>
					{# Font #}
					h1{
						font-family:{{ style_h1 }} !important;
						color:{{ color_h1 }} !important;
					}
					h2{
						font-family:{{ style_h2 }} !important;
						color:{{ color_h2 }} !important;
					}
					h3{
						font-family:{{ style_h3 }} !important;
						color:{{ color_h3 }} !important;
					}
					h4{
						font-family:{{ style_h4 }} !important;
						color:{{ color_h4 }} !important;
					}
					h5{
						font-family:{{ style_h5 }} !important;
						color:{{ color_h5 }} !important;
					}
					h6{
						font-family:{{ style_h6 }} !important;
						color:{{ color_h6 }} !important;
					}
					p,a,li,label,strong{
						font-family:{{ style_p }} !important;
						color:{{ color_p }} !important;
					}
					{# Breadcrumb #}
					.breadcrumb a {
						color: {{ breadcrumb_text_color }} !important;
						font-size: 15px;
					}
					.breadcrumb {
						background: {{ breadcrumb_background_color }};
					}
					{# Button #}
					.btn{
						color: {{ buttons_text_color }} !important;
						background-color: {{ buttons_color }} !important;
						background-image: linear-gradient(to bottom, {{ buttons_color }}, {{ buttons_color }}) !important;
						border-color: {{ buttons_color }} !important;
					}
					#top .btn{
						color: #888 !important;
						background-color: Transparent !important;
						background-image: none !important;
						border: none !important;
						text-shadow: 0 1px 0 #fff;
						text-decoration: none;
					}
					.product-thumb .button-group button {
						background-color: {{ buttons_color }} !important;
						color: {{ buttons_text_color }} !important;
						}
					{# Menu #}
					#menu {
						background-color: {{menu_color}} !important;
					background-image: none !important;
					border: none !important;
					}
					#menu .nav > li > a {
						color: {{ menu_text_color }} !important;
					}
					#menu .nav > li > a:hover, #menu .nav > li.open > a {
						background-color: {{menu_hover_color}} !important;
					}
				</style>
			
<body>
<nav id="top">
  <div class="container">{{ currency }}
    {{ language }}
    <div id="top-links" class="nav pull-right">
      <ul class="list-inline">
        <li><a href="{{ contact }}"><i class="fa fa-phone"></i></a> <span class="hidden-xs hidden-sm hidden-md">{{ telephone }}</span></li>
        <li class="dropdown"><a href="{{ account }}" title="{{ text_account }}" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> <span class="hidden-xs hidden-sm hidden-md">{{ text_account }}</span> <span class="caret"></span></a>
          <ul class="dropdown-menu dropdown-menu-right">
            {% if logged %}
            <li><a href="{{ account }}">{{ text_account }}</a></li>
            <li><a href="{{ order }}">{{ text_order }}</a></li>
            <li><a href="{{ transaction }}">{{ text_transaction }}</a></li>
            <li><a href="{{ download }}">{{ text_download }}</a></li>
            <li><a href="{{ logout }}">{{ text_logout }}</a></li>
            {% else %}
            <li><a href="{{ register }}">{{ text_register }}</a></li>
            <li><a href="{{ login }}">{{ text_login }}</a></li>
            {% endif %}
          </ul>
        </li>
        <li><a href="{{ wishlist }}" id="wishlist-total" title="{{ text_wishlist }}"><i class="fa fa-heart"></i> <span class="hidden-xs hidden-sm hidden-md">{{ text_wishlist }}</span></a></li>
        <li><a href="{{ shopping_cart }}" title="{{ text_shopping_cart }}"><i class="fa fa-shopping-cart"></i> <span class="hidden-xs hidden-sm hidden-md">{{ text_shopping_cart }}</span></a></li>
        <li><a href="{{ checkout }}" title="{{ text_checkout }}"><i class="fa fa-share"></i> <span class="hidden-xs hidden-sm hidden-md">{{ text_checkout }}</span></a></li>
      </ul>
    </div>
  </div>
</nav>
<header>
  <div class="container">
    <div class="row">
      <div class="col-sm-4">
        <div id="logo">{% if logo %}<a href="{{ home }}"><img src="{{ logo }}" title="{{ name }}" alt="{{ name }}" class="img-responsive" /></a>{% else %}
          <h1><a href="{{ home }}">{{ name }}</a></h1>
          {% endif %}</div>
      </div>
      <div class="col-sm-5">{{ search }}</div>
      <div class="col-sm-3">{{ cart }}</div>
    </div>
  </div>
</header>
